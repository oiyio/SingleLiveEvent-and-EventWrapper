<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.omeriyioz.singleliveevent">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SingleLiveEvent">

        <activity
            android:name=".screen1.Activity1"
            android:label="Screen 1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".screen2.Activity2"
            android:label="Screen 2" />
        <activity
            android:name=".screen3.Activity3"
            android:label="Screen 3"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen4.Activity4"
            android:label="Screen 4" />
        <activity
            android:name=".screen5.Activity5"
            android:label="Screen 5"
            android:screenOrientation="portrait" />

    </application>

</manifest>